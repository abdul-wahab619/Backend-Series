<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mini WebApp</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full h-screen bg-zinc-900 text-white p-10">
      <div class="w-full flex justify-end">
        <a
          class="bg-red-500 rounded-md text-sm mb-5 inline-block px-3 py-2"
          href="/logout"
          >Logout</a
        >
      </div>

      <h3 class="text-3xl">
        <span class="font-light">Hello</span>, <%= user.name %>
      </h3>
      <h5 class="mb-5">You can create a new post.</h5>
      <form method="post" action="/post">
        <textarea
          placeholder="What's on your mind"
          class="p-3 outline-none w-1/3 resize-none bg-transparent block border-2 border-zinc-800 rounded-md"
          name="content"
        ></textarea>
        <input
          type="submit"
          class="px-3 py-2 bg-blue-500 text-sm rounded-md mt-2 w-40 block"
          value="Create New Post"
        />
      </form>
      <div class="posts mt-20">
        <h3 class="text-zinc-400">Your Posts</h3>
        <div class="postcontainer mt-5 flex gap-5 flex-wrap w-[70%]">
          <% user.posts.reverse().forEach(function (post) { %>
          <div
            class="post w-1/3 p-4 mb-2 rounded-md border-[1px] border-zinc-800 bg-zinc-700"
          >
            <h4 class="text-blue-400 mb-2"><%=user.name %></h4>
            <p class="text-sm tracking-tight"><%= post.content %></p>
            <div class="btns flex gap-4 mt-5">
              <a href="" class="text-blue-500">like</a>
              <a href="" class="text-zinc-500">ediit</a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
